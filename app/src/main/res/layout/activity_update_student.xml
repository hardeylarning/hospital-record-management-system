<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UpdateStudentActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/federo"
        android:padding="5dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#03A679"
        android:textSize="30sp"
        android:textStyle="bold"
        android:text="UPDATE ACCOUNT"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="30dp"
        android:layout_marginHorizontal="20dp"
        android:orientation="horizontal">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/upSearch"
            android:hint="Matric No"
            android:paddingLeft="20dp"
            android:gravity="center"
            android:background="@drawable/textfield"
            android:layout_weight="1"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Search"
            android:padding="5dp"
            android:background="@drawable/btn"
            android:id="@+id/upBtnSearch"
            android:layout_weight="3"/>
    </LinearLayout>

    <EditText
        android:id="@+id/upFirstName"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/textfield"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:ems="10"
        android:paddingLeft="10dp"
        android:hint="First Name"
        android:inputType="textPersonName"
        />

    <EditText
        android:id="@+id/upLastName"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/textfield"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:ems="10"
        android:paddingLeft="10dp"
        android:hint="Last Name"
        android:inputType="textPersonName"
        />

    <TextView
        android:id="@+id/upStudentId"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/textfield"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:padding="10dp"
        android:textSize="17sp"
        android:hint="Matric No"
        />

        <EditText
            android:id="@+id/upDepartment"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/textfield"
            android:layout_marginBottom="10dp"
            android:layout_marginHorizontal="15dp"
            android:ems="10"
            android:hint="Department"
            android:paddingLeft="10dp"
            android:inputType="textPersonName"
            />

        <EditText
            android:id="@+id/upFaculty"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/textfield"
            android:layout_marginBottom="10dp"
            android:layout_marginHorizontal="15dp"
            android:paddingLeft="10dp"
            android:ems="10"
            android:hint="Faculty"
            android:inputType="textPersonName"
            />

        <EditText
            android:id="@+id/upLevel"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="10dp"
            android:background="@drawable/textfield"
            android:layout_marginBottom="10dp"
            android:layout_marginHorizontal="15dp"
            android:ems="10"
            android:hint="Level"
            android:inputType="textPersonName"
           />
        <Button
            android:id="@+id/upSignup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn"
            android:text="Update" />
</LinearLayout>