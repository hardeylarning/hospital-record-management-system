<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rpt"
    android:orientation="vertical"
    tools:context=".UpdateReportActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Update Report"
        android:textSize="30sp"
        android:id="@+id/rptReport"
        android:textAlignment="center"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:elevation="5dp"
        android:layout_centerInParent="true"
        android:layout_below="@+id/rptReport">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rptMatric"
            android:padding="5dp"
            android:text="Matric No"
            android:textAlignment="center"
            android:layout_marginBottom="10dp"/>
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtAttendance"
            android:layout_marginHorizontal="20dp"
            android:padding="5dp"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginHorizontal="20dp"
            android:elevation="10dp"
            android:textColor="#fff"
            android:hint="Presenting Complain"
            android:textColorHint="#fff"
            android:alpha="0.5"
            android:id="@+id/txtDesc"
            android:paddingLeft="15dp"
            android:gravity="start|top"
            android:background="@drawable/textarea"/>
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtDiagnosis"
            android:layout_marginHorizontal="20dp"
            android:padding="5dp"
            android:layout_marginBottom="10dp"/>
        <EditText
            android:id="@+id/txtLab"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/textarea"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20dp"
            android:textColorHint="#fff"
            android:textColor="#ffffff"
            android:alpha="0.5"
            android:ems="10"
            android:paddingLeft="10dp"
            android:hint="Lab Test"
            android:inputType="textPersonName"
            />

        <EditText
            android:id="@+id/txtDrug"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/textarea"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20dp"
            android:ems="10"
            android:textColor="#ffffff"
            android:textColorHint="#fff"
            android:alpha="0.5"
            android:paddingLeft="10dp"
            android:hint="Drug given"
            android:inputType="textPersonName"
            />
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtOutcome"
            android:layout_marginHorizontal="20dp"
            android:padding="5dp"
            android:layout_marginBottom="10dp"/>

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Update"
            android:id="@+id/rptBtn"
            android:background="@drawable/save_btn"
            android:layout_marginTop="15dp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:alpha="0.6"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-medium"
            android:textColorLink="#ffbb00"
            android:textSize="20sp"
            android:padding="10dp"
            android:elevation="8dp" />

    </LinearLayout>

</LinearLayout>